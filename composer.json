{
    "name": "atellitech/postal-yii2",
    "description": "It's yii2 component integrating atellitech/postal-php",
    "keywords": ["postal", "mail", "yii2"],
    "license": "MIT",
    "homepage":"https://github.com/AtelliTech/postal-yii2",
    "authors": [
        {
            "name": "Eric Huang",
            "email": "eric.huang@atelli.ai"
        }
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "^2.0",
        "atellitech/postal": "^1.0",
        "atellitech/utils-yii2": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "AtelliTech\\Yii2\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
